

<h1> 
    Clientes Eliminados:

    <a href="/goback"><img class="icon" src="/icons/back.png"></a>

</h1>

<%  if (locals.paginate_control) { %>
<%- paginate_control %>
<% } %>

<table>
    <tr>
        <th>
            Borrado
        </th>
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            Dirección
        </th>
        <th>
            
        </th>
    </tr> 

    <% for (var i in customers) { %> 
        <% var customer = customers[i]; %>      

        <tr>
            <td>
                <%= moment(customer.deletedAt).format("DD-MM-YYYY") %>
            </td>
            <td>
                <%= customer.code %>
            </td>
            <td>
                <%= customer.name %>
            </td>
            <td>
                <%= customer.address1 %>
            </td>

            <td>
                <% if (session.user && session.user.isAdmin) { %>
                <a href="/trash/customers/<%= customer.id %>?_method=POST"><img class="icon" src="/icons/restore.png"></a>
                <% } %>


                <% if (session.user && session.user.isAdmin) { %>
                <a href="/trash/customers/<%= customer.id %>?_method=DELETE"
                   onClick="return confirm('¿Seguro que quiere borrar DEFINITIVAMENTE el cliente: <%= customer.name %>?');"><img class="icon" src="/icons/kill.png"></a>
                <% } %>
            </td>
         </tr> 
    <% } %>

</table>

